<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_head_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/chat_head_profile_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:src="@drawable/ic_moon"
        tools:ignore="SpeakableTextPresentCheck" />

   <TextView
       android:id="@+id/text_view_id"
       android:layout_width="20dp"
       android:layout_height="20dp"
       android:layout_marginStart="-15dp"
       android:layout_marginLeft="-15dp"
       android:layout_toEndOf="@+id/chat_head_profile_iv"
       android:background="@drawable/circle_background"
       android:gravity="center_horizontal|center_vertical"
       android:textColor="#FFFF"
       android:textSize="14sp"
       android:textStyle="bold" />

    <TextView
        android:id="@+id/content_notify_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_head_profile_iv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-15dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/chat_head_profile_iv"
        android:background="@drawable/notify_background"
        android:gravity="center_horizontal|center_vertical"
        android:padding="10dp"
        android:textColor="#FFFF"
        android:textSize="12sp"
        android:textStyle="normal" />


</RelativeLayout>